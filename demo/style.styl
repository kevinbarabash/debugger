@import 'nib'

html
  height: 100%;

body
  background: gray;
  margin: 0;
  height: 100%;

#container
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  border: 10px solid transparent;
  box-sizing: border-box;

#editor-container
  display: flex;
  margin-right: 10px;
  flex-grow: 1;
  flex-shrink: 1;
  flex-direction: column;

#editor
  flex-grow: 1;

#side
  display: flex;
  height: 100%;
  flex-shrink: 0;
  flex-direction: column;

.header
  display: flex;
  flex-shrink: 1;
  flex-grow: 0;
  flex-direction: row;

.tab
  background-color: #EEE;
  flex-shrink: 1;
  flex-grow: 0;
  font-family: sans-serif;
  padding: 4px 10px;
  border-bottom: solid 1px gray;
  border-right: solid 1px gray;

canvas
  background-color: white;
  margin-bottom: 10px;

#inspector
  background-color: white;
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  flex-shrink: 0;

.column
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  flex-shrink: 0;
  align-items: stretch;
  border-right: solid 1px gray;
  width: 50%;

h2
  margin: 0;
  padding: 0;
  font-family: sans-serif;
  font-weight: normal;

.button
  background-color: lightgray;

.button.header
  border-bottom: solid 1px gray;
  background-color:#BBB;

.tab.button
  border-bottom: none;
  cursor: pointer;
  font-size: 10pt;
  padding-top:6px;
  color:#333;

.tab.button[disabled]
  color: #999;

#debugControls
  margin-bottom: 10px;

#variableList
  list-style-type: none;
  padding-left:0;

.ace_breakpoint
  background-color: rgb(0, 128, 255);

.ace_active-line
  background-color: rgba(0, 128, 255, 0.3) !important;

.section_header
  background-color: #EEE;
  border-bottom: solid 1px gray;
  font-family: sans-serif;
  font-size: 14px;
  font-weight: normal;
  padding: 5px 10px;
  padding-bottom: 2px;
  color: #333;
  flex-shrink: 0;

#callStack 
  ul
    list-style-type: none;
    margin-top: 2px;
    padding:0;
  
    li
      padding-left: 16px;
      padding-right: 16px;

iframe
  border: none;
  margin-bottom: 10px;
  display:block;

.overlay:focus
  outline: none;
